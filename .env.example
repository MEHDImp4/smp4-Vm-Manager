# =============================================================================
# SMP4 VM Manager - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Authentication (REQUIRED)
# -----------------------------------------------------------------------------
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_me_in_production

# -----------------------------------------------------------------------------
# Database (PostgreSQL - REQUIRED for production)
# -----------------------------------------------------------------------------
# PostgreSQL credentials for docker-compose
POSTGRES_USER=smp4
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=smp4_db
REDIS_URL=redis://redis:6379

# Connection URL (auto-generated from above in docker-compose)
# For local development without docker:
# DATABASE_URL=postgresql://smp4:your_password@localhost:5432/smp4_db?schema=public

# -----------------------------------------------------------------------------
# Proxmox Configuration (REQUIRED)
# -----------------------------------------------------------------------------
PROXMOX_URL=https://your-proxmox-host:8006
PROXMOX_API_TOKEN=user@pam!tokenid=your-api-token-secret
PROXMOX_NODE=pve
PROXMOX_SSL_VERIFY=false

# SSH password for LXC containers
LXC_SSH_PASSWORD=your_lxc_ssh_password

# Backend IP (visible from VMs for callbacks)
BACKEND_IP=192.168.1.100

# -----------------------------------------------------------------------------
# Cloudflare Configuration (REQUIRED for domains)
# -----------------------------------------------------------------------------
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token
CF_TUNNEL_ID=your_cloudflare_tunnel_id
CF_TUNNEL_TOKEN=your_cloudflare_tunnel_token

# -----------------------------------------------------------------------------
# VPN Configuration
# -----------------------------------------------------------------------------
VPN_ENDPOINT=your-vpn-domain.com:51821

# -----------------------------------------------------------------------------
# Email Configuration (REQUIRED for user verification)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="SMP4 Cloud <noreply@smp4.xyz>"

# -----------------------------------------------------------------------------
# Docker Compose Overrides (optional)
# -----------------------------------------------------------------------------
BACKEND_PORT=3000
APP_PORT=8090
